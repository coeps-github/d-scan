{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "es5",
      "dom"
    ],
    "module": "amd",
    "target": "es5",
    "rootDir": "./src",
    "outFile": "./dist/main.js",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}